{
  "include": [
    "./src/**/*"
  ],
  "ts-node": {
    "files": true
  },
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",

    "resolveJsonModule": true,
    "sourceMap": true,

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "rootDir": "./src",
    "outDir": "./dist",

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "allowJs": true,

    "declaration": true,
    "declarationMap": true
  }
}
